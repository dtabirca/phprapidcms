<form id="loginForm" method="post" class="form-horizontal" action="{{ BASE_URL }}/login">
    <input type="text" name="fill_me" class="fill-me" autocomplete="off">
    <input type="hidden" name="app_key" value="{{ APP_KEY }}">
    <div class="form-group">
        <label class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
            <input type="" class="form-control" name="user" style="max-width:300px" required>
        </div>            
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">       
            <input type="password" name="pass" class="form-control" style="max-width:300px" required>
        </div>            
    </div>

    <input type="submit" class="btn btn-lg btn-primary" value="Login" style="float:left;margin-right:20px">    
</form>